
     <%= form_with url: search_hotels_path, method: :get,local: true do |form| %>
        <div>
        <%=form.label :location, "Enter the location"%>

        <%=form.text_field :location%>
        </div>

        <div>
         <%= form.submit 'Search' %>
        </div>
     <% end  %>
     
     

     <%if @hotels.any? %>
       <ul>
         <h1> These are your search results </h1>
          <%@hotels.each do |hotel|%>
             <li><%=link_to hotel.name, hotel_path(hotel.id) %></li>
          <% end  %>
       </ul>
     <% else%>
       <p>There is no hotel with this location</p>
     <% end  %> 

